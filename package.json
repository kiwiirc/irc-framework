{
  "name": "irc-framework",
  "version": "4.2.0",
  "description": "A better IRC framework for node.js",
  "main": "dist/",
  "browser": {
    "./src/transports/default.js": "./src/transports/default_browser.js"
  },
  "dependencies": {
    "eventemitter3": "^2.0.2",
    "iconv-lite": "^0.4.24",
    "lodash": "^4.17.11",
    "middleware-handler": "^0.2.0",
    "runes": "^0.4.3",
    "socksjs": "^0.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-loader": "^8.0.5",
    "chai": "^3.4.1",
    "chai-subset": "^1.2.0",
    "core-js": "^2.6.5",
    "istanbul": "^0.4.5",
    "jshint": "^2.10.2",
    "mocha": "^5.2.0",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1"
  },
  "scripts": {
    "test": "npm run lint && npm run coverage -- -R dot test/ --recursive",
    "lint": "jshint src/ examples/ test/ || true",
    "unit-test": "mocha --recursive",
    "coverage": "istanbul cover --include-all-sources _mocha --",
    "build": "npm run build-dist && npm run build-browser",
    "build-dist": "babel src/ -d dist/ --delete-dir-on-start",
    "build-browser": "webpack --config webpack.config.js",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiwiirc/irc-framework.git"
  },
  "keywords": [
    "IRC",
    "bot",
    "messaging"
  ],
  "author": "prawnsalad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kiwiirc/irc-framework/issues"
  },
  "homepage": "https://github.com/kiwiirc/irc-framework#readme"
}
